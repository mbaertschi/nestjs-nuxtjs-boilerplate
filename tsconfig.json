{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./app/client/*"],
      "@/*": ["./app/client/*"]
    },
    "outDir": "dist",
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/vuetify",
      "@nuxtjs/apollo",
      "@vue/apollo-composable",
      "jest"
    ]
  },
  "exclude": ["node_modules", "dist", ".nuxt"]
}
