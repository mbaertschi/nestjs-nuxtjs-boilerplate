{
  "name": "nest-nuxt-boilerplate",
  "version": "1.0.0",
  "description": "Application boilerplate for NestJS and NuxtJS",
  "author": {
    "name": "Michael BÃ¤rtschi"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "deps": "yarn upgrade-interactive --latest",
    "prebuild": "rimraf dist .nuxt && yarn generate:types",
    "postbuild": "yarn copy",
    "build": "npm-run-all -p build:**",
    "build:server": "nest build",
    "build:client": "nuxt-ts build",
    "pretypeorm": "(rm ormconfig.json || :) && CLI_PATH=app/server/src/commands/cli.ts yarn nestjs-command create:ormconfig",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migration:generate": "yarn typeorm migration:generate -n",
    "db:migrate": "yarn typeorm migration:run",
    "db:rollback": "yarn typeorm migration:revert",
    "lint": "npm-run-all -s lint:**",
    "lint:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore . --fix",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint:pug": "pug-lint-vue ./app/client",
    "start:prod": "NODE_ENV=production node dist/app/server/src/main",
    "start:server:dev": "nest start --watch",
    "start:server:debug": "nest start --debug --watch",
    "start:client:dev": "nuxt-ts",
    "start:client": "nuxt-ts start",
    "test": "jest",
    "test:backend": "jest --config ./app/server/jest.backend.config.js",
    "test:unit": "jest --config ./app/server/jest-unit.config.js",
    "test:unit:cov": "jest --config ./app/server/jest-unit.config.js --runInBand --coverage",
    "test:e2e": "jest --config ./app/server/test/jest-e2e.config.js",
    "test:e2e:cov": "jest --config ./app/server/test/jest-e2e.config.js --runInBand --coverage",
    "test:client": "jest --config ./app/client/jest-client.config.js",
    "test:client:cov": "jest --config ./app/client/jest-client.config.js --runInBand --coverage",
    "generate:types": "graphql-codegen --config codegen.yml",
    "copy": "npm-run-all -p copy:**",
    "copy:nest:locales": "cp -r ./app/server/locales ./dist/app/server",
    "copy:nest:templates": "cp -r ./app/server/templates ./dist/app/server",
    "copy:nuxt:locales": "cp -r ./app/client/locales ./dist/app/client/dist",
    "copy:nuxt:static": "cp -r ./app/client/static ./dist/app/client/dist"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/graphql": "^7.7.0",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/typeorm": "^7.1.4",
    "@ntegral/nestjs-sentry": "^1.0.4",
    "@nuxt/typescript-runtime": "^2.0.0",
    "@nuxtjs/apollo": "^4.0.1-rc.4",
    "@nuxtjs/composition-api": "^0.13.5",
    "@nuxtjs/pwa": "^3.2.2",
    "@nuxtjs/vuetify": "^1.0.0",
    "@sentry/browser": "^5.27.1",
    "@sentry/integrations": "^5.27.1",
    "@vue/apollo-composable": "^4.0.0-alpha.10",
    "@vue/apollo-util": "^4.0.0-alpha.6",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-server-express": "^2.18.2",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect-typeorm": "^1.1.4",
    "cookie-parser": "^1.4.5",
    "cross-fetch": "^3.0.6",
    "csurf": "^1.11.0",
    "express-session": "^1.17.1",
    "flat": "^5.0.2",
    "graphql": "^15.4.0",
    "helmet": "^4.1.1",
    "joi": "^17.3.0",
    "nestjs-command": "^1.5.3",
    "nestjs-i18n": "^8.0.10",
    "nestjs-pino": "^1.2.0",
    "nodemailer": "^6.4.14",
    "nodemailer-sendgrid": "^1.0.3",
    "nuxt": "^2.14.7",
    "nuxt-i18n": "^6.15.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.4.2",
    "pino-pretty": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.28",
    "typeorm-static": "^1.1.1",
    "vuex-module-decorators": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@graphql-codegen/cli": "^1.19.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-vue-apollo": "^2.1.1",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@nuxt/types": "^2.14.7",
    "@nuxt/typescript-build": "^2.0.3",
    "@nuxt/vue-app": "^2.14.7",
    "@nuxtjs/eslint-config-typescript": "^4.0.0",
    "@nuxtjs/eslint-module": "^3.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/faker": "^5.1.3",
    "@types/flat": "^5.0.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.5",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@vue/test-utils": "^1.1.0",
    "apollo-client": "^2.6.10",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pug": "^3.0.0",
    "pug-lint-vue": "^0.4.0",
    "pug-plain-loader": "^1.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "typeorm-factories": "^1.0.1",
    "typescript": "^4.0.5",
    "vue-jest": "^3.0.7",
    "vuex": "^3.5.1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint",
    "*.{vue}": "pug-lint-vue"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
