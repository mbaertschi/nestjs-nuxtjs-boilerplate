{
  "name": "nest-nuxt-boilerplate",
  "version": "1.0.0",
  "description": "Application boilerplate for NestJS and NuxtJS",
  "author": {
    "name": "Michael BÃ¤rtschi"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "deps": "yarn upgrade-interactive --latest",
    "prebuild": "rimraf dist .nuxt",
    "build": "npm-run-all -p build:**",
    "build:server": "nest build",
    "build:client": "nuxt-ts generate",
    "client:serve": "nuxt-ts serve",
    "db:migration:generate": "ts-node ./node_modules/typeorm/cli migration:generate -f bin/loader -n",
    "db:migration:run": "ts-node ./node_modules/typeorm/cli migration:run -f bin/loader",
    "db:migration:rollback": "ts-node ./node_modules/typeorm/cli migration:revert -f bin/loader",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore . --fix",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "start:prod": "NODE_ENV=production node dist/app/server/main",
    "start:server:dev": "nest start --watch",
    "start:server:debug": "nest start --debug --watch",
    "start:client:dev": "nuxt-ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.2",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/typeorm": "^7.1.0",
    "@nuxt/typescript-runtime": "^1.0.0",
    "@nuxtjs/pwa": "^3.0.0-0",
    "@nuxtjs/vuetify": "^1.0.0",
    "apollo-server-express": "^2.16.1",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.0.18",
    "joi": "^17.2.0",
    "nestjs-pino": "^1.2.0",
    "nuxt": "^2.14.1",
    "nuxt-composition-api": "^0.11.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.0",
    "pino-pretty": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "typeorm": "^0.2.25",
    "vuex-module-decorators": "^0.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.4.2",
    "@nuxt/types": "^2.14.1",
    "@nuxt/typescript-build": "^2.0.2",
    "@nuxtjs/eslint-config-typescript": "^3.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "babel-eslint": "^10.0.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.0.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
