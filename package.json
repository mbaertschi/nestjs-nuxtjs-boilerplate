{
  "name": "meraki-msp",
  "version": "1.0.0",
  "description": "Meraki managed service platform built with NestJS and NuxtJS",
  "author": {
    "name": "Michael BÃ¤rtschi"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "deps": "yarn upgrade-interactive --latest",
    "build": "npm-run-all -p build:**",
    "build:server": "nest build",
    "build:client": "nuxt-ts build",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore . --fix",
    "prebuild:server": "rimraf dist:server",
    "prebuild:client": "rimraf dist:client",
    "start:server": "nest start",
    "start:server:dev": "nest start --watch",
    "start:server:debug": "nest start --debug --watch",
    "start:server:prod": "node dist/server/main",
    "start:client": "nuxt-ts start",
    "start:client:dev": "nuxt-ts",
    "start:client:prod": "nuxt-ts start"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nuxt/typescript-runtime": "^0.4.0",
    "@nuxtjs/pwa": "^3.0.0-0",
    "nuxt": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@nuxt/typescript-build": "^1.0.2",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/vuetify": "^1.0.0",
    "@types/express": "^4.17.3",
    "@types/node": "^14.0.13",
    "babel-eslint": "^10.0.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "yarn lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
